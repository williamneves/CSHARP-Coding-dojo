@model Comment

<h3>Post a comment:</h3>

<form method="post" asp-action="PostComment" asp-controller="Home">

    <div class="form-floating mb-3">
        <input type="hidden" asp-for="UserId" value="@ViewBag.UserLoggedIn.UserId"/>
        <input type="hidden" asp-for="MessageId" value="@ViewBag.Message.MessageId"/>
        <input asp-for="CommentText" class="form-control" placeholder="Type your message..."/>
        <label asp-for="CommentText"></label>
    </div>
    <input type="submit" value="Post" class="btn btn-outline-primary"/>
</form>