@model EditUserPassword
<h4>Redefine Password:</h4>
<hr class="dropdown-divider"/>
<form asp-action="EditUserPassword" asp-controller="Auth" method="post">
    <input type="hidden" name="UserId" value="@ViewBag.UserProfile.UserId"/>
    <small>
        <span asp-validation-for="Password" class="text-red-200"></span>
    </small>
    <div class="form-floating mb-3">
        <input asp-for="Password" class="form-control">
        <label asp-for="Password" class="col-form-label"></label>
    </div>
    <small>
        <span asp-validation-for="Confirm" class="text-red-200"></span>
    </small>
    <div class="form-floating mb-3">
        <input asp-for="Confirm" class="form-control">
        <label asp-for="Confirm" class="col-form-label"></label>
    </div>
    <button type="submit" class="btn btn-primary float-end btn-lg my-3" id="btnsubmit-register-page">Set New Password</button>
</form>
