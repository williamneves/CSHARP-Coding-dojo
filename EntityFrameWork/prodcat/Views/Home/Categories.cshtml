@{
    ViewData["Title"] = "Products and Categories";
}
@model Category
<div class="row m-auto my-5 justify-content-evenly">
  <div class="col-4">
  <h4>New Category</h4>
  <hr>
    <form asp-action="NewCategory" asp-controller="Home" method="post">
      <div class="input-group mb-3">
        <label asp-for="Name" class="input-group-text"></label>
        <input asp-for="Name" class="form-control">
      </div>
        <span asp-validation-for="Name"></span>

      <button type="submint" class="btn btn-primary w-50 text-center mb-3">New Product</button>
    </form>
  </div>

  <div class="col-4">
  <h3>Existing Categories</h3>
  <hr>
  <table class="table table-hover table-striped">
 
  @{
    foreach (var cat in ViewBag.AllCategories)
    {
      <tr>
        <td>
          <a href="/categories/@cat.CategoryId">@cat.Name</a>
        </td>
      </tr>
    }
  }
  </table>
  </div>

</div>

