<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Font Awesome Kit JS -->
    <script src="https://kit.fontawesome.com/311afd7444.js" crossorigin="anonymous"></script>

    <!-- Page Title -->
    <title>PageTitle</title>

</head>

<body>
<div>
    <div class="container-lg">
        <div class="row my-5 m-auto">
            <div class="card col-8 p-5">
                @{
                <form action="formsubmit" method="post">
                    <div class="row g-3 align-items-center mb-3 col-8 justify-content-between">
                        <div class="col-auto">
                            <label for="Name" class="col-form-label">Your Name</label>
                        </div>
                        <div class="col-auto">
                            <input type="text" name='Name' id="Name" class="form-control" value="@ViewBag.Name" readonly>
                        </div>
                    </div>
                    <div class="row g-3 align-items-center mb-3 col-8 justify-content-between">
                        <div class="col-auto">
                            <label for="DojoLocation" class="col-form-label">Dojo Location</label>
                        </div>
                        <div class="col-auto">
                            <select name="DojoLocation" id="DojoLocation" class="form-select" disabled>
                                <option value="@ViewBag.DojoLocation">@ViewBag.DojoLocation</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-3 align-items-center mb-3 col-8 justify-content-between">
                        <div class="col-auto">
                            <label for="FavLang" class="col-form-label">Favorite Language</label>
                        </div>
                        <div class="col-auto">
                            <select name="FavLang" id="FavLang" class="form-select" disabled>
                                <option value="@ViewBag.FavLang">@ViewBag.FavLang</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Comment</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                            name="Comment" readonly>@ViewBag.Comment</textarea>
                    </div>
                    <br>
                    <a href="/" class="btn btn-primary">Back</a>
                </form>
            }
            </div>
        </div>
    </div>
</div>
</body>
</html>